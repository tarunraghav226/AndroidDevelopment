<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/homeStudentTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/student_details"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="29dp"
        android:layout_marginTop="20dp"
        android:text="@string/admission_number"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/homeStudentTxt" />

    <TextView
        android:id="@+id/homeClassTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginTop="8dp"
        android:text="@string/class_of"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/homeRollNumTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginBottom="9dp"
        android:text="@string/roll_no"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/homeMid1Txt"
        app:layout_constraintStart_toStartOf="@+id/homeMid1Txt" />

    <TextView
        android:id="@+id/homeMid1Txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="29dp"
        android:layout_marginTop="47dp"
        android:text="@string/mid1"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/homeClassTxt" />

    <TextView
        android:id="@+id/homeMid2Txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:text="@string/mid2"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/homeMid1Txt"
        app:layout_constraintTop_toBottomOf="@+id/homeMid1Txt" />

    <TextView
        android:id="@+id/homeFinalTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/final_term"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/homeMid2Txt"
        app:layout_constraintTop_toBottomOf="@+id/homeMid2Txt" />

    <TextView
        android:id="@+id/homeUserAdmNumTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/homeUserClassTxt"
        app:layout_constraintStart_toStartOf="@+id/homeUserClassTxt"
        app:layout_constraintTop_toTopOf="@+id/textView2" />

    <TextView
        android:id="@+id/homeUserClassTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/homeUserRollTxt"
        app:layout_constraintStart_toStartOf="@+id/homeUserRollTxt"
        app:layout_constraintTop_toBottomOf="@+id/homeUserAdmNumTxt" />

    <TextView
        android:id="@+id/homeUserRollTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/homeUserMid1Txt"
        app:layout_constraintStart_toStartOf="@+id/homeUserMid1Txt"
        app:layout_constraintTop_toBottomOf="@+id/homeUserClassTxt" />

    <TextView
        android:id="@+id/homeUserMid1Txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/homeUserMid2Txt"
        app:layout_constraintStart_toStartOf="@+id/homeUserMid2Txt"
        app:layout_constraintTop_toBottomOf="@+id/homeUserRollTxt" />

    <TextView
        android:id="@+id/homeUserMid2Txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="191dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="190dp"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/homerecyclerView"
        app:layout_constraintTop_toBottomOf="@+id/homeUserMid1Txt" />

    <TextView
        android:id="@+id/homeUserFinalTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/homeUserMid2Txt"
        app:layout_constraintStart_toStartOf="@+id/homeUserMid2Txt"
        app:layout_constraintTop_toBottomOf="@+id/homeUserMid2Txt" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/homerecyclerView"
        android:layout_width="350dp"
        android:layout_height="314dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="30dp"
        android:background="#00FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/homeUserFinalTxt" />

</androidx.constraintlayout.widget.ConstraintLayout>